    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <% if (filterListing && filterListing.length > 0) { %>
            <% for (let listing of filterListing) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-body">
                            <!-- You can add content in the overlay if needed -->
                            <div class="card-img-overlay">
                                <!-- Example: <span class="badge bg-primary">New</span> -->
                            </div>
                            <p class="card-text">
                                <b><%= listing.title %>,<%= listing.location %></b> <br />
                                5 nights. 28Mar-2Apr <br>
                                <% if (listing.price != null) { %>
                                    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                                    <i class="tax-info"> +18% GST</i>
                                <% } else { %>
                                    Price not available
                                <% } %>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        <% } else { %>
            <p>No listings found for the selected filter.</p>
        <% } %>
    </div>
</body>
<script>
  let filters = document.getElementsByClassName("filter");
  
  // Loop through each filter element and add an event listener to it
  for (let filter of filters) {
    filter.addEventListener("click", () => {
      let ps = document.getElementsByTagName("p"); // Get all <p> elements
      for (let p of ps) {
        p.style.borderBottom = "1px solid black"; // Apply the style to each <p> element
      }
    });
  }
</script>
