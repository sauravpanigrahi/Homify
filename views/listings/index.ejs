<% layout("layouts/boilerplate") %>

<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    <div id="filters">
      <div class="filter">
        <div><a href="/listings"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p></a>
      </div>
      <div class="filter">
          <div><a href="/listings/filter?type=rooms"><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p></a>
        </div>
        <div class="filter">
          <div><a href="/listings/filter?type=island"><i class="fa-solid fa-sailboat"></i></div>
        <p>Island</p></a>
        </div>
        <div class="filter">
            <div><a href="/listings/filter?type=iconic cities"><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p></a>
          </div>
          <div class="filter">
            <div><a href="/listings/filter?type=mountain"><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p></a>
          </div>
          <div class="filter">
              <div><a href="/listings/filter?type=castles"><i class="fa-solid fa-castle"></i></div>
            <p>Castles</p></a>
            </div>
            <div class="filter">
                <div><a href="/listings/filter?type=amazing pools"><i class="fa-solid fa-person-swimming"></i></div>
              <p>Amazing Pools</p></a>
              </div>
              <div class="filter">
                  <div><a href="/listings/filter?type=camping"><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p></a>
                </div>
                <div class="filter">
                    <div><a href="/listings/filter?type=farms"><i class="fa-solid fa-cow"></i></div>
                  <p>Farms</p></a>
                  </div>
                  <div class="filter">
                    <div><a href="/listings/filter?type=arctic"><i class="fa-solid fa-snowflake"></i></div>
                  <p>Arctic</p></a>
                  </div>
                  <div class="filter">
                    <div><a href="/listings/filter?type=historical homes"><i class="fa-solid fa-landmark"></i></div>
                  <p>Historical Homes</p></a>
                  </div>
                  <div class="filter">
                    <div><a href="/listings/filter?type=domes"><i class="fa-solid fa-dome"></i></div>
                  <p>Domes</p></a>
                  </div>
                  <div class="filter">
                    <div><a href="/listings/filter?type=boats"><i class="fa-solid fa-sailboat"></i></div>
                  <p>Boats</p></a>
                  </div>
                  <div class="filter">
                    <div><a href="/listings/filter?type=beach"><i class="fa-solid fa-umbrella-beach"></i></div>
                  <p>Beach</p></a>
                  </div>
                  <div class="tax-toggles ms-auto">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                      </div>
                  </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <% for(let listing of listings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <% if (listing.image && listing.image.url) { %>
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem;">
                    <% } else { %>
                        <img src="/images/default-listing.jpg" class="card-img-top" alt="Default listing image" style="height: 20rem;">
                    <% } %>
                    <div class="card-body">
                        <!-- You can add content in the overlay if needed -->
                        <div class="card-img-overlay">
                            <!-- Example: <span class="badge bg-primary">New</span> -->
                        </div>
                        <p class="card-text">
                            <b><%= listing.title %>,<%= listing.location %></b> <br />
                            5 nights. 28Mar-2Apr <br>
                          <% if (listing.price != null) { %>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>
                            <i class="tax-info" style="display: none;"> +18% GST</i>
                        <% } else { %>
                            Price not available
                        <% } %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    const taxInfoElements = document.getElementsByClassName("tax-info");
    
    taxSwitch.addEventListener("change", function() {
        Array.from(taxInfoElements).forEach(info => {
            info.style.display = this.checked ? "inline" : "none";
        });
    });
});
</script>